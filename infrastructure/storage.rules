rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // First aid images - public read
    match /first_aid/{imageId} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // User profile images - private
    match /users/{userId}/profile/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test data - unrestricted for testing
    match /test/{allPaths=**} {
      allow read, write: if true;
    }
  }
}
